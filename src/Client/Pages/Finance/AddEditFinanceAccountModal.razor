@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditFinanceAccountModal> _localizer

<EditForm Model="@AddEditFinanceAccountModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (AddEditFinanceAccountModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @_localizer["Add FinanceAccount"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @_localizer["Update FinanceAccount"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditFinanceAccountModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => AddEditFinanceAccountModel.Id)" @bind-Value="AddEditFinanceAccountModel.Id" Label="@_localizer["Id"]" />
                    </MudItem>
                }
                
                <MudItem xs="12" md="6">
                    <MudTextField MaxLength="150" For="@(() => AddEditFinanceAccountModel.Name)" @bind-Value="AddEditFinanceAccountModel.Name" Label="@_localizer["Name"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField MaxLength="50" For="@(() => AddEditFinanceAccountModel.Code)" @bind-Value="AddEditFinanceAccountModel.Code" Label="@_localizer["Code"]" />
                </MudItem>
                 <MudItem xs="12" md="6">
                    <MudTextField MaxLength="150" For="@(() => AddEditFinanceAccountModel.Owner)" @bind-Value="AddEditFinanceAccountModel.Owner" Label="@_localizer["Owner"]" />
                </MudItem>
                  <MudItem xs="12" md="6">
                    <MudTextField MaxLength="150" For="@(() => AddEditFinanceAccountModel.Type)" @bind-Value="AddEditFinanceAccountModel.Owner" Label="@_localizer["Type"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudNumericField  For="@(() => AddEditFinanceAccountModel.InitAmount)" @bind-Value="AddEditFinanceAccountModel.InitAmount" Label="@_localizer["InitAmount"]" Format="N2"/>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudCheckBox   For="@(() => AddEditFinanceAccountModel.IsActive)" @bind-Value="AddEditFinanceAccountModel.IsActive" Label="@_localizer["Active"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudDatePicker Disabled="(AddEditFinanceAccountModel.IsActive ? false : true)" For="@(() => AddEditFinanceAccountModel.InactiveDate)" @bind-Value="AddEditFinanceAccountModel.InactiveDate" Label="@_localizer["InactiveDate"]" />
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            @if (AddEditFinanceAccountModel.Id != 0)
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</MudButton>
            }
            else
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>